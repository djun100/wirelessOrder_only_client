<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 		android:id="@+id/kitchen_content_left_linear"
	 		android:layout_width="wrap_content"
	 		android:layout_height="fill_parent"
	 		android:orientation="vertical"
	 		android:layout_weight="1"
	 	>
	 		<Button
	 			android:id="@+id/kitchen_content_left_button"
	 			android:layout_width="wrap_content"
	 			android:layout_height="wrap_content"
	 			android:text="@string/kitchen_content_left_button"
	 			android:layout_marginLeft="15px"
	 			
	 			/>
	 			<TextView
	 			android:id="@+id/kitchen_left_text"
	 			android:layout_width="wrap_content"
	 			android:layout_height="wrap_content"
	 			android:text="@string/kitchen_left_text"
	 			android:layout_marginLeft="15px"
	 			/>
 			<ListView
				android:layout_width="420px"
				android:layout_height="30px"
				android:id="@+id/kitchen_left_listview"
				android:layout_weight="1"
				android:layout_marginLeft="20px"
			/>
	 		
	 	</LinearLayout>