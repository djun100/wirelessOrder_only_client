<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    
    >
	<TextView  
    	android:layout_width="80px" 
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:id="@+id/kitchen_id"
    />
   <TextView  
    	android:layout_width="80px" 
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:layout_toRightOf="@id/kitchen_id" 
    	android:id="@+id/kitchen_name"
    />
   <TextView  
    	android:layout_width="80px" 
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:layout_toRightOf="@id/kitchen_name"
    	android:id="@+id/kitchen_num"
    />
     <TextView  
    	android:layout_width="110px" 
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:layout_toRightOf="@id/kitchen_num"
    	android:id="@+id/kitchen_min"
    />
     <TextView  
    	android:layout_width="80px" 
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:layout_toRightOf="@id/kitchen_min"
    	android:id="@+id/kitchen_tabnum"
    />
     <TextView  
    	android:layout_width="80px" 
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:layout_toRightOf="@id/kitchen_tabnum"
    	android:id="@+id/kitchen_remark"
    />
 
     <TextView  
    	android:layout_width="80px" 
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:layout_toRightOf="@id/kitchen_remark"
    	android:id="@+id/kitchen_operate"
    />
    <Button
    	android:id="@+id/kitchen_btn" 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:focusable="false"
    	/>  
</LinearLayout>
